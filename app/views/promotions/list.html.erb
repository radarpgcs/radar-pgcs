<div class="container">
<div class="row">
  <div class="col-md-12 text-center">
    <h3><%= t '.title' %></h3>
    <h5><%= t ".type.#{@options[:type].downcase}" %></h5>
    <h5><%= t ".staff.#{@options[:external_staff] ? 'external' : 'internal'}" %></h5>
    <h5><%= t ".year" %> <%= @options[:year] %></h5>
  </div>
</div>

<% unless @promotions.empty? %>
<div class="row">
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= t '.registry' %></th>
        <th><%= t '.name' %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @promotions.each do |promotion| %>
        <tr>
          <td width="10%"><%= promotion.employee.registry %></td>
          <td width="80%"><%= promotion.employee.name %></td>
          <td><%= link_to t('show'), show_employee_path(registry: promotion.employee.registry), class: "btn btn-primary", role: "button" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="row">
  <%= paginate @promotions %>
</div>
<div class="row">
  <%= page_entries_info @promotions %>
</div>
<% else %>
<i><%= t 'views.pagination.empty' %></i>
<% end %>
</div>