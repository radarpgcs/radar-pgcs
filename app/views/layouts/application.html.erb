<!DOCTYPE html>
<html lang="pt">
<head>
  <title><%= t 'app_name' %></title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body id="home" data-spy="scroll" data-target=".navbar" data-offset="60">
  <%= yield %>

  <nav class="navbar navbar-toggleable-md">
    <div class="collapse navbar-collapse" id="navbarCollapse">
      <ul class="navbar-nav">
        <li class="nav-item">
          <h6><%= link_to 'Home', home_path, class: 'nav-link' %></h6>
        </li>
        <li class="nav-item">
          <h6><%= link_to 'Contact', '', class: 'nav-link' %></h6>
        </li>
        <li class="nav-item">
          <h6><%= link_to 'FAQ', faq_path, class: 'nav-link' %></h6>
        </li>
        <li class="nav-item">
          <h6>
            <a href="javascript: void(0)" data-toggle="modal" data-target="#modalVersionMessage" onclick="showModalNews()" class="nav-link"><%= ENV['APP_VERSION'] %></a>
          </h6>
        </li>
        <li class="nav-item">
          <h6><%= link_to t('project_site'), ENV['PROJECT_SOURCE_URL'], class: 'nav-link' %></h6>
        </li>
      </ul>
    </div>
  </nav>

  <div id="modalVersionMessage" class="modal fade" tabindex="-1" role="dialog">
    <br/>
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title"><%= t 'news.title' %></h4>
        </div>
        <div id="modalNews" class="modal-body">
          
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal"><%= t 'close' %></button>
        </div>
      </div>
    </div>
  </div>

  <% if @should_show_news %>
  <script>
    $(document).ready(function() {
      showModalNews();
    });
  </script>
  <% end %>
</body>
</html>